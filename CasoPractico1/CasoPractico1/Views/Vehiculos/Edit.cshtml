@model CasoPractico1.Models.Vehiculo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Vehiculo</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VehiculoId" />
                <div class="form-group">
                    <label asp-for="Placa" class="control-label"></label>
                    <input asp-for="Placa" class="form-control" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modelo" class="control-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacidad" class="control-label"></label>
                    <input asp-for="Capacidad" class="form-control" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" class="form-select">
                        <option value="Bueno" selected="@(ViewData["estado"] == "Bueno" ? "selected" : null)">Bueno</option>
                        <option value="Regular" selected="@(ViewData["estado"] == "Regular" ? "selected" : null)">Regular</option>
                        <option value="Necesita mantenimiento" selected="@(ViewData["estado"] == "Necesita mantenimiento" ? "selected" : null)">Necesita mantenimiento</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RutaId" class="control-label">Ruta</label>
                    <select asp-for="RutaId" class="form-control" asp-items="ViewBag.RutaId"></select>
                    <span asp-validation-for="RutaId" class="text-danger"></span>
                </div>


                <input asp-for="FechaRegistro" class="form-control" hidden />
                <input asp-for="UsuarioRegistroId" class="form-control" hidden />


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary mt-4" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
