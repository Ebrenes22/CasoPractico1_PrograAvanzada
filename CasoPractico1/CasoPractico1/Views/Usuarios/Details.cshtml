@model IEnumerable<CasoPractico1.Models.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h4>Detalles del Usuario</h4>
    <hr />

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Usuario Id</th>
                <th scope="col">Nombre de Usuario</th>
                <th scope="col">Nombre Completo</th>
                <th scope="col">Correo</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Contraseña</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>********</td> @* Protege la contraseña *@
                    <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Usuarios" asp-route-id="@item.UsuarioId" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-controller="Usuarios" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Create" asp-controller="Usuarios" class="btn btn-success">Agregar Nuevo Usuario</a>
        <a asp-action="Index" asp-controller="Usuarios" class="btn btn-secondary">Volver al Menu</a>
    </div>
</div>
