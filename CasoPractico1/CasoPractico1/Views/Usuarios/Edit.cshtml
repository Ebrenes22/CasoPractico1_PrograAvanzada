@model CasoPractico1.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h4>Editar Usuario</h4>
    <hr />

    <form asp-action="Edit" method="post">
        <!-- Campo oculto con el ID del usuario -->
        <input type="hidden" asp-for="UsuarioId" />

        <div class="mb-3">
            <label class="form-label">Nombre de Usuario</label>
            <input type="text" class="form-control" asp-for="NombreUsuario" required />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Nombre Completo</label>
            <input type="text" class="form-control" asp-for="NombreCompleto" required />
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Correo</label>
            <input type="email" class="form-control" asp-for="Correo" required />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono</label>
            <input type="text" class="form-control" asp-for="Telefono" required />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-control" asp-for="Contrasena" required />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Rol</label>
            <select class="form-select" asp-for="Rol">
                <option value="Administrador">Administrador</option>
                <option value="Usuario">Usuario</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
