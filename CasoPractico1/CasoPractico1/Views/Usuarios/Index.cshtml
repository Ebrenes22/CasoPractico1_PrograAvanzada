@{
    ViewData["Title"] = "Menú de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height: 100vh;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h1 class="h3 mb-0">Módulo de Usuarios</h1>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-controller="Usuarios" asp-action="Details" class="btn btn-primary btn-lg">
                            Lista de Usuarios
                        </a>
                        <a asp-controller="Usuarios" asp-action="Create" class="btn btn-success btn-lg">
                            Crear Usuario
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
