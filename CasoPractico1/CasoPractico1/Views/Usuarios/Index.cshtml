@model IEnumerable<CasoPractico1.Models.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h4>Lista de Usuarios</h4>
    <hr />

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Usuario ID</th>
                <th scope="col">Nombre de Usuario</th>
                <th scope="col">Nombre Completo</th>
                <th scope="col">Correo</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.UsuarioId</td>
                    <td>@usuario.NombreUsuario</td>
                    <td>@usuario.NombreCompleto</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.Rol</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Usuarios" asp-route-id="@usuario.UsuarioId" class="btn btn-primary btn-sm">
                            Editar
                        </a>
                        <a asp-action="Delete" asp-controller="Usuarios" asp-route-id="@usuario.UsuarioId" class="btn btn-danger btn-sm">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Create" asp-controller="Usuarios" class="btn btn-success">Agregar Nuevo Usuario</a>
    </div>
</div>
